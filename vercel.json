{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/main.py"
    },
    {
      "source": "/auth/(.*)",
      "destination": "backend/main.py"
    },
    {
      "source": "/health",
      "destination": "backend/main.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.12",
    "ENABLE_TEST_ROUTES": "0"
  }
}